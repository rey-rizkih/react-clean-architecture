{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./src"],
      "@di": ["./adapter/di"],
      "@di/*": ["./adapter/di/*"],
      "@repository/*": ["./adapter/repositories/*"],
      "@service/*": ["./adapter/services/*"],
      "@useCase/*": ["./adapter/useCases/*"],
      "@dto/*": ["./domain/dtos/*"],
      "@error/*": ["./domain/errors/*"],
      "@mapper/*": ["./domain/mappers/*"],
      "@model/*": ["./domain/models/*"],
      "@hook/*": ["./main/hooks/*"],
      "@infra/*": ["./main/infrastructures/*"],
      "@route/*": ["./main/routes/*"],
      "@util/*": ["./main/utils/*"],
      "@ui/*": ["./ui/*"]
    }
  },
  "include": ["src", "domain/repository", "domain/mapper", "domain/errors"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
